<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:windowBackground">@color/background_color</item>
    </style>

    <!-- Style for general buttons used in the app. -->
    <style name="GameButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Style for text views displaying status and labels. -->
    <style name="StatusText" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Custom style for GridView -->
    <style name="CustomGridView">
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:verticalSpacing">10dp</item>
        <item name="android:horizontalSpacing">10dp</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:columnWidth">40dp</item>
    </style>
</resources>
